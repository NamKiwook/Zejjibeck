doctype html
html
    head
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title SIGN UP
        link(rel="stylesheet", href="/stylesheets/signUp.css")
        script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    body
        include navbar.pug
        .container
            .title Let's create an account
            .text Already have an account?
                a(href="/login") Log In
            input#name(type="text", placeholder="Full Name")
            input#id(type="text", placeholder="Email")
            input#password(type="password", placeholder="Password")
            .btn.register REGISTER

script.

    $('.btn.register').click(function(){
        var email = String(document.getElementById('id').value);
        var name = String(document.getElementById('name').value);
        var password = String(document.getElementById('password').value);

        $.ajax({
            type: 'post',
            url:'/signup/confirm',
            data:{userId: email, password: password, username: name},
            dataType:'json',
            success:function(data){
                console.log(data);
                if(data.pass == 'ok')
                {
                    alert('signup complete');
                    window.location.href = '/login';
                }
                else
                {
                    alert('exist id');
                }
            },
            error:function(err){console.log(err);}
        })
    });